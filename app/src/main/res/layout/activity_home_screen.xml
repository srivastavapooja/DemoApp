<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="testdomain.com.verizonapp.HomeScreen">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_text"
        android:layout_margin="@dimen/fab_margin"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_weight="1"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/display_text_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/home_text"
        android:padding="10dp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@color/colorPrimary"
        android:gravity="clip_vertical"
        android:text="Display Text"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:onClick="GotoTextScreen"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/watch_video_button"
        android:padding="10dp"
        android:text="Do Some Math"
        android:layout_margin="@dimen/fab_margin"
        android:textAlignment="gravity"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorButtonText"
        android:layout_weight="0.5"
        android:gravity="clip_vertical"
        android:onClick="GotoMathScreen"
        android:layout_below="@+id/home_text"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>
